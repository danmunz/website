{% set allTags = [] %}
{% for post in collections.posts %}
  {% for tag in post.data.tags %}
    {% if allTags.indexOf(tag) == -1 and tag != "posts" and tag != "post" %}
      {% set allTags = allTags.concat([tag]) %}
    {% endif %}
  {% endfor %}
{% endfor %}



